package src.rss {  import flash.display.MovieClip;  import flash.events.Event;  import flash.net.URLLoader;  import flash.net.URLRequest;  import src.text.textFields;    import src.text.GradientText;    import src.text.textFields;  import src.components.CountDown;  import src.components.imgLoader;  public class RSSclass extends MovieClip {  	/*----Classes----*/	private var rssLoader:URLLoader;	private var rssURL:URLRequest;	public var content:CountDown;		/*----Data----*/	private var rssXML:XML;			/*----Numbers----*/	public static const SECTION_WIDTH:Number = 275;	/*----Arrays----*/	public var display:Array;		/*----MovieClips & Strings----*/	public var section;	public var nebLogo:imgLoader;		public function RSSclass(url, s) {	  section = s;	  rssLoader = new URLLoader();	  rssURL = new URLRequest(url);	  rssXML = new XML();	  rssXML.ignoreWhitespace = true;	  rssLoader.addEventListener(Event.COMPLETE, rssLoaded);	  rssLoader.load(rssURL);	}		private function rssLoaded(event:Event) {	  rssXML = XML(rssLoader.data);	  section == 'COUNTDOWN' ? createCountDown(rssXML) :		/*section == 'SCHEDULE' ?*/ createSchedule(rssXML); /*:		  createNews(rssXML);*/	}		private function createCountDown(xml) {	  //trace(xml.channel.item.opponent);	  var gradientArr = new Array([0x80081c, 0x8c0b21, 0xb0102b, 0xcc203d], [1, 1, 1, 1], [0, 127, 128, 255]),		  textArr = new Array("Impact", 40, 2),		  vs = new GradientText('VS.', textArr, gradientArr),		  neb = new textFields(14, 0x000000, 'Arial', 'LEFT'),		  sportField = new textFields(18, 0x000000, 'Arial', 'LEFT'),		  opponent = new textFields(14, 0x000000, 'Arial', 'LEFT'),		  oppoText:String = xml.channel.item[0].opponent,		  sport:String = xml.channel.item[0].sport.replace(/^<![CDATA[ /, "").replace(/]]>$/, "");	  neb.text = "NEBRASKA";	  nebLogo = new imgLoader('neb_logo.png');	  opponent.text = oppoText.length > 12 ? oppoText.replace(" ", "\n").replace("and", "&") : oppoText;	  sportField.text = sport;	  vs.x = (SECTION_WIDTH / 2) - (vs.width / 2);	  vs.y = 50;	  neb.x = vs.x - (neb.width + 5);	  neb.y = vs.y + 40;	  nebLogo.x = 35;	  nebLogo.y = 45;	  opponent.x = (vs.x + vs.width) + 5;	  opponent.y = neb.y;	  sportField.x = (this.parent.width/2) - (sportField.width/2);	  sportField.y = 140;	  addChild(neb);	  addChild(nebLogo);	  addChild(vs);	  addChild(opponent);	  addChild(sportField);	  content = new CountDown(xml);	  content.x = 25;	  content.y = 175;	  addChild(content);	}		private function createSchedule(xml) {	  trace(xml);	}  }}